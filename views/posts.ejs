<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/post.css">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap" rel="stylesheet">
    <title>PostIt!</title>
</head>

<body>
    <%- include('./partials/header.ejs') %>
        <main>
            <div class="content-area">
                <% if (posts.length > 0) { %>
                    <% posts.forEach(post => { %>
                        <div class="post">
                            <div class="header">
                                <a href="#"><img class="account" src="/images/account.png" alt="Account Photo"></a>
                                <p id="author">
                                    <%=post.author %>
                                </p>
                                <p id="time">
                                    <%= post.time %>
                                </p>
                            </div>
                            <div class="content">
                                <!-- TODO - ADD IMAGE -->
                            </div>
                            <div class="text">
                                <p id="title">
                                    <%= post.title %>
                                </p>
                                <p id="body">
                                    <%= post.body %>
                                </p>
                            </div>
                            <div class="footer">
                                <button>Like</button>
                            </div>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <p id='no-post'>You did not post anything...</p>
                                <% } %>

            </div>
        </main>
        <%- include('./partials/footer.ejs') %>
</body>

</html>